@{
    ViewData["Title"] = "Landing Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page - Barrier Busters Philippines</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .navbar-custom {
            background-color: #538392;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #B3E2A7;
            }

            .navbar-custom .btn-primary {
                background-color: #6295A2;
                border-color: #6295A2;
            }

            .hero-section h1 {
                font-size: 3rem;
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

            .hero-section p {
                font-size: 1.25rem;
                margin-bottom: 20px;
            }

        .content-section {
            padding: 50px 0;
            text-align: center;
        }

            .content-section h2 {
                color: #538392;
                font-size: 1.75rem;
                margin-bottom: 20px;
            }

            .content-section p {
                font-size: 1rem;
                margin-bottom: 20px;
            }

            .content-section img {
                border-radius: 10px;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .content-section img:hover {
                    transform: scale(1.05);
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                }

        .footer {
            background-color: #538392;
            color: #B3E2A7;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand font-weight-bold" href="#">Barrier Busters Philippines</a>
        <div class="collapse navbar-collapse justify-content-center">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#" onclick="checkLogin(event, '/Home/Trips')">Trips</a></li>
                <li class="nav-item"><a class="nav-link" href="#" onclick="checkLogin(event, '/Home/Contact')">Contact</a></li>
            </ul>
        </div>
        <a class="btn btn-primary ml-auto" href="/Home/Login">Log in</a>
    </nav>

    @{
        ViewData["Title"] = "Sign Up";
    }

    <div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #538392;">
        <div class="card p-4" style="width: 400px; background-color: #80B9AD;">
            <h2 class="text-center mb-4" style="color: #B3E2A7;">Sign Up</h2>
            <form enctype="multipart/form-data">
                <div class="form-group">
                    <label for="email">Enter Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter Email" required />
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Name" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" required />
                </div>
                <div class="form-group">
                    <label for="repassword">Re-Enter Password</label>
                    <input type="password" class="form-control" id="repassword" placeholder="Re-Enter Password" required />
                </div>
                <div class="form-group">
                    <label for="contact">Contact No.</label>
                    <input type="text" class="form-control" id="contact" placeholder="Contact No." required />
                </div>
                <div class="form-group">
                    <label for="disability">Disability</label>
                    <input type="text" class="form-control" id="disability" placeholder="Disability" />
                </div>
                <div class="form-group">
                    <label for="profileImage">Profile Image</label>
                    <input type="file" class="form-control-file" id="profileImage" />
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="background-color: #6295A2; border-color: #6295A2;">Sign Up</button>
            </form>
            <div class="text-center mt-3">
                <p>Already have an account? <a href="/Home/Login" style="color: #B3E2A7;">Click here to login.</a></p>
            </div>
        </div>
    </div>


    <div class="footer">
        <p>&copy; 2024 Barrier Busters Philippines. All rights reserved.</p>
    </div>

        <script>
        function checkLogin(event, url) {
            // Prevent the default link action
            event.preventDefault();

            // Check if the user is logged in
            var isLoggedIn = false; // This should be dynamically checked, e.g., from server-side or JavaScript variable

            if (isLoggedIn) {
                // If logged in, redirect to the requested page
                window.location.href = url;
            } else {
                // If not logged in, show an alert
                alert('Please login first.');
            }
        }
    </script>

</body>
</html>

